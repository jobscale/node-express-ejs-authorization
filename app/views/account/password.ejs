<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Change Password</title>
  <link rel="stylesheet" href="/css/form.css">
  <%- include('../menu/head') %>
  <script type="text/javascript" src="/js/account/password.js"></script>
</head>
<body>
  <main>
    <h1 class=title>Change Password</h1>
    <section class="intro">
      <form class="login">
        <p>
          <label for="password">Password:</label>
          <input type="password" id="password" placeholder="password">
        </p>
        <p>
          <label for="confirm">Confirm:</label>
          <input type="password" id="confirm" placeholder="confirm">
        </p>
        <p class="update-submit">
          <button type="submit" class="update-button arrow-btn">Update</button>
        </p>
        <div class="center error" id="status"></div>
      </form>
    </section>
  </main>
  <%- include('../menu/body') %>
</body>
</html>
